		{
			"name": "Combat - Challenge (requires char IDs)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const a = pm.collectionVariables.get(\"charA\");\r",
							"const b = pm.collectionVariables.get(\"charB\");\r",
							"\r",
							"if (!a || !b) {\r",
							"  throw new Error(\"Missing charA/charB. Create two characters first and save their IDs.\");\r",
							"}\r",
							"\r",
							"\r",
							""
						],
