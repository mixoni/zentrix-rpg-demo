		{
			"name": "Account - Login User (set userToken manually from response)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Login User: status 200\", function () {\r",
							"  pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const json = pm.response.json();\r",
							"\r",
							"pm.test(\"Login User: token exists\", function () {\r",
							"  pm.expect(json).to.have.property(\"token\");\r",
							"  pm.expect(json.token).to.be.a(\"string\").and.not.empty;\r",
							"});\r",
							"\r",
							"// Save token to collection variable\r",
							"pm.collectionVariables.set(\"userToken\", json.token);\r",
							"\r",
							"if (json.user?.id) pm.collectionVariables.set(\"userId\", json.user.id);\r",
							"if (json.user?.role) pm.collectionVariables.set(\"userRole\", json.user.role);\r",
							"\r",
							"console.log(\"✅ userToken saved to collection variables\");\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
